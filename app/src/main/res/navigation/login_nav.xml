<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.android.orderapp.ui.fragments.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/loginToForgotPassword"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/loginToSignup"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/loginToHomePage"
            app:destination="@id/main_activity_nav" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.android.orderapp.ui.fragments.login.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/signupToLogin"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.android.orderapp.ui.fragments.login.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/forgotToLogin"
            app:destination="@id/loginFragment" />
    </fragment>
    <include app:graph="@navigation/main_activity_nav" />
</navigation>